<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/app_name"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/register_bk_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúng ta \ncùng học nào"
                android:textStyle="bold"
                android:textColor="@color/whiteTextColor"
                android:textSize="35dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom">
            </TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hero">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:minHeight="100dp"
                android:background="@drawable/home_gradient_maths"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/home_ic_maths">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:textColor="@color/whiteTextColor"
                    android:layout_alignParentTop="true"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="Giải đề">
                </TextView>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:minHeight="100dp"
                android:background="@drawable/home_gradient_chemistry"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/home_ic_chemistry">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:textColor="@color/whiteTextColor"
                    android:layout_alignParentTop="true"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="Q&amp;A">
                </TextView>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:minHeight="100dp"
                android:background="@drawable/home_gradient_geography"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/home_ic_geography">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:textColor="@color/whiteTextColor"
                    android:layout_alignParentTop="true"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="Mini game">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>